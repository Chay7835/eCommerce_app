<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - eCommerce.UI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/eCommerce.UI.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <style>
        #nav:hover {
            box-shadow:0 1px 2px 1px white;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color: midnightblue">
            <div class="container">
                <a class="navbar-brand" style="color:white" asp-area="" asp-controller="Home" asp-action="Index">Bajaj Shopping</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li id="nav" class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li id="nav" class="nav-item">
                            <a class="nav-link text-light" asp-area="Products" asp-controller="Home" asp-action="Index">Products</a>
                        </li>
                        <li id="nav" class="nav-item">
                            <a class="nav-link text-light" asp-area="Categories" asp-controller="Home" asp-action="Index">Categories</a>
                        </li>
                        <li id="nav" class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li id="nav" class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Order" asp-action="Index">Payment</a>
                        </li>
                        @if (Context.User.Identity.IsAuthenticated == true && Context.Session.GetString("Admin") == "chaychinnapareddy7835@gmail.com")
                        {
                            <li id="nav" class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Admin Contents
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="#">Add/Modify Category</a></li>
                                    <li><a class="dropdown-item" href="#">Add/Modify Product</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="#">Create Admin Users</a></li>
                                </ul>
                            </li>
                        }
                        @if(Context.User.Identity.IsAuthenticated==false)
                        {
                            <li id="nav" class="nav-item">
                            <a class="nav-link text-light" asp-area="Security" asp-controller="Home" asp-action="Login">Login</a>
                            </li>
                        }
                        else
                        {
                            <li id="nav" class="nav-item">
                                <a class="nav-link text-light" asp-area="Security" asp-controller="Home" asp-action="Logout">Logout</a>
                            </li>
                        }
                        <li class="nav-item" style="margin-left:700px; margin-top:5px;">
                                <i style="color:white;" class="bi bi-cart"></i>
                        </li>
                        <li id="nav" class="nav-item">
                            <a class="nav-link text-light" asp-area="Carts" asp-controller="Home" asp-action="MyCart">Cart</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid"
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color: midnightblue; margin-top:10px;">
        <div class="container" style="color:white">
            &copy; 2024 - eCommerce.UI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
