    <div class="col-3">
        <img class="other-product" src="@Url.Content("https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQXVwCrLPTVBtX4hm0nNaXO18eP132vnSL24A&usqp=CAU")" />
    </div>
