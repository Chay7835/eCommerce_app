@model IEnumerable<eCommerce.Models.Category>

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    function redirectToCategory(categoryId) {
        var url = '/Categories/Home/category1/' + categoryId;
        window.location.href = url;  
    }
</script>
<h1 style="text-align:center">Welcome to eCommerce Categories</h1>
<div class="container mt-5">
    <h1 class="text-center">@ViewBag.PageTitle</h1>
    <p class="text-center">@ViewBag.PageSubTitle</p>
    <br />
    <div class="row">
        @foreach (var category in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100" id="cardborder">
                    <img src="@Url.Content(category.CategoryPicture)" class="card-img-top" alt="@category.CategoryName" height="250">
                    <div class="card-body">
                        <h5 class="card-title">@category.CategoryName"</h5>
                        <p class="card-text">@category.CategoryDescription</p>
                    </div>
                    <div class="card-footer">
                        <div class="text-center">
                            <a class="btn btn-outline-success btn-sm" onclick="redirectToCategory('@category.CategoryId')">Show Products</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

